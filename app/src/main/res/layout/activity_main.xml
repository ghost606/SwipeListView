<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.drizzlyday.example.app.MainActivity">

    <be.drizzlyday.samsungswipelistview.lib.SwipeListView xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        swipe:swipeFrontView="@+id/front"
        swipe:swipeBackView="@+id/back"
        swipe:swipeCloseAllItemsWhenMoveList="true"
        swipe:swipeActionLeft="choice"
        swipe:swipeMode="left"
        swipe:swipeOpenOnLongPress="true"
        swipe:swipeOffsetLeft="275dp">

    </be.drizzlyday.samsungswipelistview.lib.SwipeListView>

</RelativeLayout>
